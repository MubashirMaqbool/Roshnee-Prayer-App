<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentications.SignUp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/appimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="15dp"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:text="SIGN UP"
                android:textColor="#ffffff"

                android:textSize="18sp"
                android:textStyle="bold"/>
        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="GET THE MOST OUT OF OUR APP"
            android:textColor="#000000"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="BY CREATING AN ACCOUNT"
            android:textColor="#1b5cb6"
            android:textSize="18sp"
            android:textStyle="bold" />
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">







            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText

                    android:id="@+id/text_input_f_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"


                    android:layout_marginRight="15dp"
                    android:hint="First Name"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText

                    android:id="@+id/text_input_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"


                    android:layout_marginRight="15dp"
                    android:hint="Last Name"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>




        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText

                android:id="@+id/text_input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"


                android:layout_marginRight="15dp"
                android:hint="E-mail Adress "
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText

                android:id="@+id/text_input_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"


                android:layout_marginRight="15dp"
                android:hint="Phone No"
                android:inputType="number"/></com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText

                android:id="@+id/text_input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"


                android:layout_marginRight="15dp"
                android:hint="Password"
                android:inputType="text"/></com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText

                android:id="@+id/text_input_cpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"


                android:layout_marginRight="15dp"
                android:hint="Confirm Password"
                android:inputType="text"/></com.google.android.material.textfield.TextInputLayout>




        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#1b5cb6"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:onClick="SignUpAndShowBottomActivty">

            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sign Up"
                android:fontFamily="@font/montserrat_bold"
                android:onClick="SignUpAndShowBottomActivty"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_toRightOf="@+id/forgottxt"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="or sign up in with your social accounts"/>

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


            <RelativeLayout
                android:layout_marginRight="10dp"
                android:id="@+id/lg"
                android:background="@drawable/shape"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView
                    android:id="@+id/google"
                    android:layout_margin="1dp"
                    android:src="@drawable/google"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/lg"
                android:background="@drawable/shape"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView
                    android:id="@+id/fb"
                    android:layout_margin="5dp"
                    android:src="@drawable/facebook"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"/>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>